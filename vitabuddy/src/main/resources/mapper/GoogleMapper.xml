<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="GoogleMapper">

    <!-- 구글 소셜 로그인-->
    <insert id="insertGoogleMember" parameterType="com.example.vitabuddy.dto.GoogleDTO">
        INSERT INTO GoogleUsers (SocialId, UserName, UserEmail, AuthType)
        VALUES (#{socialId, jdbcType=VARCHAR}, #{userName, jdbcType=VARCHAR}, #{userEmail, jdbcType=VARCHAR}, 'google')
    </insert>

    <!-- 이메일로 사용자 조회 -->
    <select id="findBySocialId" resultType="com.example.vitabuddy.dto.GoogleDTO">
        SELECT * FROM GoogleUsers WHERE SocialId = #{socialId}
    </select>
    
</mapper>
